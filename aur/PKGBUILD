# Maintainer: Thor77 <thor77 at thor77 dot org>
pkgname=simp_le
pkgver=0.2.0
pkgrel=2
pkgdesc="Simple Let's Encrypt client"
arch=('any')
url='https://github.com/zenhack/simp_le'
license=('GPL')
makedepends=('git' 'python-setuptools' 'python-setuptools-scm')
depends=('python' 'ca-certificates' 'python-setuptools' 'python-pip' 'python-wheel' 'python-cryptography' 'python-mock'
         'python-pyopenssl' 'python-acme015')
source=("$pkgname-$pkgver"::"git+https://github.com/zenhack/simp_le.git")
md5sums=('SKIP')

prepare() {
    cd "$pkgname-$pkgver"
    git checkout tags/$pkgver
}

package() {
    cd "$pkgname-$pkgver"
    python setup.py install --root="$pkgdir/" --prefix=/usr --optimize=1
}

